#include <stdio.h>

void bubble_sort(int vetor[], int tam){ //Declaração de uma função chamada bubble_sort com parâmetros integrais e vetor[] e tamanho
	int proximo = 0; //Declaração da variável auxiliar

	for(int i = 0; i < tam; i++){ //Um looping for que varre todo o vetor externo
		for(int j = 0; j < (tam - 1); j++){ //Outro looping for que trabalha com os próximos elementos
	        if(vetor[j] > vetor[j+1]){ //Caso o valor dentro do vetor for maior que o próximo elemento, realiza a troca:
	        	proximo = vetor[j]; //A variável auxiliar é igual a valor dentro do vetor
	        	vetor[j] = vetor[j+1]; //O valor desta posição no vetor é alterado pelo próximo valor
	        	vetor[j+1]=proximo; //O valor do próximo vetor é alterado pelo valor da variável auxiliar(que contém o valor da variável anterior)
	        }
	    }
	 }
}

int main() { //Declaração da função main
   int vetor[6] = {8, 3, 1, 42, 12, 5}; //Criação de um vetor de 6 elementos

   bubble_sort(vetor, 6); //Aplicação da função de ordenação com parâmetros vetor e o tamanho do vetor (6)

   for(int i = 0; i < 6; i++){ //Looping for com limite de 6 (tamanho do vetor)
   	printf("%d\n", vetor[i]); //Função para printar na tela a posição correspondente no vetor
   }

}
