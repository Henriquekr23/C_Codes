#include <stdio.h>

void insert_sort(int vetor[], int tam){ //Criação da função instert_sort com parâmetros integrais vetor[] e tamanho
  int troca; //Declaração da variável auxiliar troca

  for(int i = 1; i < tam; i++){ //Looping for para percorrer o vetor
    int proximo = i; //Criação de mais uma variável auxiliar que recebe o valor no looping

    while((proximo != 0) && (vetor[proximo] < vetor[proximo - 1])){ //Looping enquanto criado, sendo executado quando a variável próximo for diferente de 0 e o valor na posição correspondente a variável for menor que o valor anterior
      troca = vetor[proximo]; //Variável auxiliar troca recebe o valor do próximo número na posição correspondente ao valor da variável próximo
      vetor[proximo] = vetor[proximo - 1]; //A posição correspondente ao valor da variável próximo recebe o valor 
      vetor[proximo - 1] = troca;
      proximo--;
    }
  }
}

int main() {
   int vetor[6] = {8, 3, 1, 42, 12, 5};

   //Aplicando a ordenação;
   insert_sort(vetor, 6);

   //Apresentando o vetor ordenado
   for(int i = 0; i < 6; i++){
	   printf("%d\n", vetor[i]);
   }

}
